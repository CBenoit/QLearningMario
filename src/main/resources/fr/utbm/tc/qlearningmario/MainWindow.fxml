<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<Pane prefHeight="260.0" prefWidth="520.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.utbm.tc.qlearningmario.mario.ui.MainController">
   <children>
      <MenuBar fx:id="mainMenuBar" prefHeight="30.0" prefWidth="520.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleOpenFile" text="Open..." />
                  <MenuItem fx:id="saveMenuItem" disable="true" mnemonicParsing="false" onAction="#handleSaveFile" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAsFile" text="Save as..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleCloseAction" text="Close" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Accordion layoutX="260.0" layoutY="30.0" prefHeight="230.0" prefWidth="260.0">
         <panes>
            <TitledPane animated="false" text="QLearning">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Slider layoutX="14.0" layoutY="32.0" AnchorPane.topAnchor="25.0" />
                        <Label layoutX="14.0" layoutY="10.0" text="Alpha" AnchorPane.topAnchor="5.0" />
                        <Label layoutX="15.0" layoutY="57.0" text="Gamma" AnchorPane.topAnchor="45.0" />
                        <Label layoutX="15.0" layoutY="100.0" text="Rho" AnchorPane.topAnchor="85.0" />
                        <Label layoutX="15.0" layoutY="136.0" text="Nu" AnchorPane.topAnchor="125.0" />
                        <Slider layoutX="14.0" layoutY="78.0" AnchorPane.topAnchor="65.0" />
                        <Slider layoutX="14.0" layoutY="115.0" AnchorPane.topAnchor="105.0" />
                        <Slider layoutX="14.0" layoutY="153.0" AnchorPane.topAnchor="145.0" />
                        <Label fx:id="alphaValue" layoutX="154.0" layoutY="36.0" />
                        <Label fx:id="gammaValue" layoutX="154.0" layoutY="76.0" />
                        <Label fx:id="rhoValue" layoutX="154.0" layoutY="116.0" />
                        <Label fx:id="nuValue" layoutX="154.0" layoutY="156.0" />
                     </children>
                  </AnchorPane>
               </content>
            </TitledPane>
            <TitledPane animated="false" text="Game Control">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </TitledPane>
         </panes>
      </Accordion>
      <Canvas fx:id="marioCanvas" height="230.0" layoutY="30.0" width="260.0" />
   </children>
</Pane>
